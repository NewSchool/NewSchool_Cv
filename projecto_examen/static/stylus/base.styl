Gris = rgb(108, 108, 108)
Blanco = rgb(255, 255, 255)
transition(arg)
  -webkit-transition:arg
  -moz-transition:arg
  -o-transition:arg
  transition:arg
@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700,100italic,300italic,400italic);
body
	font-family 'Lato', sans-serif
	font-size 16px
	height 100%
	position absolute
	width 100%
footer
	background-color rgb(47, 137, 239)
	height 10%
	position relative
	width 100%
	z-index 999
	p
		margin 0
header
	background-color rgb(255, 255, 255)
	position relative
	width 100%
	z-index 999
#contenedorAjax
	height 72.5%
	margin auto
	position relative
	width 90%
	z-index 999
	p
		margin 0
#contenedorHeader
	height 12%
	overflow hidden
	width 100%
#copyRight
	margin auto
	width 90%
	p
		color Gris
		height 50%
		line-height 4
		margin auto 0
		transition(all 0.2s ease)
		width 50%
	p:hover
		color Blanco
#iconosSociales
	left 84%
	height 2em
	position relative
	width 16%
	ul
		list-style none
		margin-top .5em
		li
			display inline-block
			vertical-align top
#logo
	display inline-block
	left 3%
	position relative
	top -1em
	width 20%
	a > img
		width 100%
#menu
	display inline-block
	left 25%
	position relative
	vertical-align top
	width 55%
	nav
		width 100%
		ul
			list-style none
			margin .5em 0
			li
				display inline-block
				margin .25em .5em
				padding .7em
				vertical-align top
				a
					color Gris
					font-size 1.15em
					text-decoration none
					text-transform uppercase
