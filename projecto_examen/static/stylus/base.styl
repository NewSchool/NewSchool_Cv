Gris = rgb(108, 108, 108)
Blanco = rgb(255, 255, 255)
Azul = rgb(47, 137, 239)

borderRadius(arg){
	-webkit-border-radius:arg
	-moz-border-radius:arg
	-o-border-radius:arg
	border-radius:arg	
}

transition(arg){
  -webkit-transition:arg
  -moz-transition:arg
  -o-transition:arg
  transition:arg	
}

@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700,100italic,300italic,400italic)
body
	font-family 'Lato', sans-serif
	font-size 16px
	height 100%
	position absolute
	width 100%
footer
	background-color rgb(47, 137, 239)
	height 10%
	position relative
	width 100%
	z-index 999
	p
		margin 0
header
	background-color rgb(255, 255, 255)
	position relative
	width 100%
	z-index 999
#contenedorAjax
	height 72.5%
	margin auto
	position relative
	width 90%
	z-index 9999
